{
  "name": "palavreado",
  "version": "1.0.0",
  "description": "Joguete de Palavras",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -T src/server.ts",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f ./src/ormconfig.ts",
    "migration:generate": "npm run typeorm:cli migration:generate -- -n",
    "migration:clean": "npm run typeorm:cli schema:drop && npm run typeorm:cli migration:run",
    "migration:run": "npm run typeorm:cli migration:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateuscfs/palavreado.git"
  },
  "author": "Mateus Coelho",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mateuscfs/palavreado/issues"
  },
  "homepage": "https://github.com/mateuscfs/palavreado#readme",
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.18",
    "@types/swagger-jsdoc": "^6.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.4.0",
    "path": "^0.12.7",
    "pg": "^8.2.0",
    "sqlite3": "^5.0.2",
    "swagger-jsdoc": "^6.1.0",
    "typeorm": "^0.2.31",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "ava": "^3.8.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.2",
    "prettier": "^2.5.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0"
  }
}
